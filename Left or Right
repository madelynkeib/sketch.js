function setup() {
  createCanvas(720, 400);
  noStroke();
  rectMode(CENTER)
}
function draw() {
  background(230);
  if (mouseX > width /2){
    stroke(20)
      textSize(40);
    text('Right', 500,200)
  }
  else{
    textSize(40);
    stroke(20);
    text('Left',150,200)
  }
  stroke(5);
  line(360,0,360,400)
}
//I use an if/else statement to make the text show 
up on the right side if the curser was on the right 
and to say left if it was on anything else, aka the 
left side
